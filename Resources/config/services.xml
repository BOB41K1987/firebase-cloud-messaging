<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="firebase.cloud_messaging.service" class="Firebase\Bundle\CloudMessagingBundle\Service\FCMService">
            <argument type="service" id="firebase.cloud_messaging.client"/>
            <argument type="service" id="serializer"/>
        </service>
        <service id="firebase.cloud_messaging.client" class="Firebase\Bundle\CloudMessagingBundle\Http\Client">
            <argument>%firebase.cloud_messaging.key%</argument>
        </service>
    </services>
</container>